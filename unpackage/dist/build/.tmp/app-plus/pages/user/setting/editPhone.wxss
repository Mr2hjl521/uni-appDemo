page {
  background-color: #f3f3f3;
}
.icon {
  font-size: 30rpx;
}
.content {
  padding-bottom: 20rpx;
}
.content .tips {
    height: 50px;
    line-height: 50px;
    padding-left: 20px;
    font-size: 14px;
    color: #666;
}
.content .list {
    width: 96%;
    padding-left: 4%;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.content .list .row {
      widows: 100%;
      min-height: 90rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      border-bottom: solid 1rpx #eee;
}
.content .list .row:last-child {
        border-bottom: none;
}
.content .list .row .title {
        width: 70px;
        font-size: 32rpx;
        color: #333;
}
.content .list .row .right {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        color: #999;
        padding-left: 5px;
}
.content .list .row .right .inputBox {
          width: 120px;
          font-size: 15px;
}
.content .list .row .right .get-code {
          font-size: 15px;
          background-color: #FFFFFF;
          position: absolute;
          height: 90rpx;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-align: center;
          -webkit-align-items: center;
                  align-items: center;
          -webkit-box-pack: center;
          -webkit-justify-content: center;
                  justify-content: center;
          right: 0;
          padding: 0 40rpx;
          z-index: 3;
}
.content .list .row .right .get-code:after {
            content: " ";
            width: 1rpx;
            height: 50rpx;
            position: absolute;
            z-index: 3;
            margin-right: 100%;
            left: 0;
            top: 20rpx;
            color: #000;
}
.content .list .row .right .yanzheng {
          background-color: #f3f3f3;
          width: 96px;
          height: 28px;
          line-height: 28px;
          text-align: center;
}
.content .next {
    text-align: center;
    padding-top: 10px;
}
.content .next .btn {
      height: 40px;
      line-height: 40px;
      width: 90%;
      color: #fff;
      background-color: #FFD845;
      margin: 0 auto;
      margin-top: 5px;
      border-radius: 3px;
}

