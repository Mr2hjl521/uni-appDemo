.title {
  font-weight: 700;
  font-style: italic;
  font-size: 22px;
  letter-spacing: 5px;
  text-align: center;
  line-height: 60px;
}
/* 定位布局 */
.message {
  width: 90%;
  margin: 0 auto;
  height: 200px;
  border: #000000 solid 1px;
  position: relative;
}
.message .left {
    height: 140px;
    width: 120px;
    overflow: hidden;
    position: absolute;
    top: 20px;
    left: 30px;
}
.message .left image {
      height: 100%;
      width: 100%;
}
.message .right {
    height: 160px;
    width: 120px;
    overflow: hidden;
    position: absolute;
    top: 20px;
    right: 30px;
    font-size: 14px;
}
.message .right .height {
      line-height: 25px;
}
.adv {
  margin: 5% 5% 0 5%;
}
.someSay {
  height: 100px;
  width: 90%;
  margin: 0 auto;
}
.someSay .say {
    height: 100px;
    width: 100%;
    margin: 0 auto;
    border: #000000 1px solid;
    text-align: center;
}
.goup {
  background: red;
  height: 30px;
  width: 100px;
  line-height: 30px;
  text-align: center;
  float: right;
  margin: 5%;
}

